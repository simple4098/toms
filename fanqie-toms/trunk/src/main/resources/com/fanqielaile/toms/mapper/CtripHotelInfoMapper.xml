<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fanqielaile.toms.dao.CtripHotelInfoDao">
    <resultMap id="BaseResultMap" type="com.fanqielaile.toms.dto.ctrip.CtripHotelInfo">
        <id column="id" property="id"/>
        <result column="hotel_name" property="hotelName"/>
        <result column="parent_hotel_id" property="parentHotelId"/>
        <result column="created_date" property="createdDate"/>
        <result column="deleted" property="deleted"/>
        <result column="child_hotel_id" property="childHotelId"/>
        <result column="updated_date" property="updatedDate"/>
    </resultMap>

    <sql id="Base_Column_List">
       	id,hotel_name,parent_hotel_id,created_date,deleted,child_hotel_id,updated_date
       </sql>
       
       
    <insert id="insert" parameterType="com.fanqielaile.toms.dto.ctrip.CtripHotelInfo">
              insert into ctrip_parent_hotel(hotel_name,parent_hotel_id,created_date,deleted)
              values (#{hotelName},#{parentHotelId},#{createdDate},0)
       </insert>
       
    <select id="findByHotelName" parameterType="string" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from  ctrip_parent_hotel   where  deleted = 0
        <if test="hotelName!=null and hotelName!=''">
            and  hotel_name like concat('%','${hotelName}','%')
        </if>
    </select>
    
        <select id="findByParentHotelId" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from  ctrip_parent_hotel   where  deleted = 0
        <if test="parentHotelId!=null and parentHotelId!=''">
            and  parent_hotel_id = '${parentHotelId}'
        </if>
    </select>
    
    
    
    
        <select id="findHotelInfoByPage" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        from ctrip_parent_hotel where deleted=0
        <if test="hotelName!=null and hotelName!=''">
            and hotel_name like concat('%','${hotelName}','%')
        </if>
    </select>

    <insert id="saveHotelInfo" parameterType="com.fanqielaile.toms.dto.ctrip.CtripHotelInfo">
          insert into ctrip_parent_hotel(id,hotel_name,child_hotel_id,parent_hotel_id,created_date,updated_date,deleted)
              values (#{uuid},#{hotelName},#{childHotelId},#{parentHotelId},now(),now(),0)
    </insert>

</mapper>